@model CarServicingManagement.Models.User




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="container-login">
        <div class="col-md-8 offset-md-2 form-container">
            <h2 style="text-align:center;">Create A New Account</h2><br /><br /><center>
            <form>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })<div class="col-md-10">
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control-register", id = "text-box", placeholder = "Enter your mobile number" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <center>@Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })</center>
                        <div class="col-md-1">
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control-register", id = "text-box", placeholder = "Enter your email ID" } })
                        </div>
                    </div>
                </div>
                <div class="row" style="color:red">
                    <div class="col-md-5">
                        @Html.ValidationMessageFor(model => model.FirstName, "", new {  })
                    </div><div class="col-md-6">
                        @Html.ValidationMessageFor(model => model.LastName, "", new { })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(model => model.ContactNumber, htmlAttributes: new { @class = "control-label col-md-2" })<div class="col-md-10">
                            @Html.EditorFor(model => model.ContactNumber, new { htmlAttributes = new { @class = "form-control-register", id = "text-box", placeholder = "Enter your mobile number" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })<div class="col-md-1">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control-register", id = "text-box", placeholder = "Enter your email ID" } })
                        </div>
                    </div>
                </div>
                <div class="row" style="color:red">
                    <div class="col-md-5">
                        @Html.ValidationMessageFor(model => model.ContactNumber, "", new {  })
                    </div><div class="col-md-6">
                        @Html.ValidationMessageFor(model => model.Email, "", new {  })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Age, htmlAttributes: new { @class = "control-label col-md-2" })<div class="col-md-10">
                            @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control-register", id = "text-box", placeholder = "Enter your age" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-1" style="display:flex;padding-left:120px;">
                            Male
                            <div style="padding-left: 30px; padding-right: 10px;">

                                @Html.RadioButtonFor(model => model.Gender, "Male", new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            Female
                            <div style="padding-left: 30px;">

                                @Html.RadioButtonFor(model => model.Gender, "Female", new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                </div><div class="row" style="color:red">
                    <div class="col-md-5">
                        @Html.ValidationMessageFor(model => model.Age, "", new {  })
                    </div><div class="col-md-6">
                        @Html.ValidationMessageFor(model => model.Gender, "", new {  })
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })<div class="col-md-10">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control-register", id = "text-box", placeholder = "Enter your password" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <div style="padding-bottom:5px;padding-left:100px;">Retype Password</div>
                        <div class="col-md-1">
                            <input type="password" name="repassword" class="form-control-register" id="text-box" placeholder="Enter password again" />
                        </div>
                    </div>
                </div>


                <div style="display:none;">@Html.EditorFor(model => model.RoleId, new { htmlAttributes = new { @class = "form-control-register", id = "text-box", placeholder = "Enter your email ID" } })</div>
                <div class="row" style="color:red">
                    <div class="col-md-5">
                        @Html.ValidationMessageFor(model => model.Password, "", new { })
                    </div><div class="col-md-6" style="color:red;">
                        @TempData["msg"]
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(model => model.DateOfJoin, htmlAttributes: new { @class = "control-label col-md-2" })<div class="col-md-10">
                            @Html.EditorFor(model => model.DateOfJoin, new { htmlAttributes = new { @class = "form-control-register", id = "text-box", @type = "Date" } })

                        </div>
                        <div class="form-group" style="color:red">
                            @Html.ValidationMessageFor(model => model.DateOfJoin, "", new {  })@TempData["dateCheck"]
                            </div>
                        </div>

                    </div>
                <br /><div class="form-group"><div class="col-md-6"><input type="submit" value="Create" class="btn btn-warning" /></div></div><div><p>Already have an account ? <a href="@Url.Action("Login","User")" style="color:orange">Login</a></p></div>
            </form>
            </center>
        </div>         <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
}  @section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
