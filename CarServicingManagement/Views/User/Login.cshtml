@model CarServicingManagement.Models.User

@{
    ViewBag.Title = "Login";
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
@{if (TempData["successMessage"] != null) {
        <script type="text/javascript">
                swal({
                    title: "@TempData["successMessage"]", text: "Good Job!", icon: "success", button: "Ok",
                });
        </script>
        }
    }
<style>
    body{
        background-image:url("/Content/Images/nissan-240z-g09b988f8c_1920.jpg");
        background-size:cover;
    }
</style>
<section id="login">
   

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken() <div class="container-login">
            <div class="col-md-4 offset-md-4 form-container">
                <h2 style="text-align:center;">Login</h2><br />                 <form>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })                     <div class="form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })<center>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", id = "text-box-login", placeholder = "Enter your Email ID" } })
                                @*@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-warning" })*@
                            </div>
                        </center>
                    </div>                     <div class="form-group">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })<center>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", id = "text-box-login", placeholder = "Enter your password" } })
                                @* @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-warning" })*@
                            </div>
                        </center>
                    </div><div class="form-group" style="color:red;text-align:center;">
                        @ViewBag.validation
                    </div><br /><center>
                        <div class="form-group" style="display:flex;">
                            <div class="col-md-4">
                                <input type="submit" value="Login" class="btn btn-warning" />
                            </div>

                        </div><br /><div><p>Don't have an account ? <a href="@Url.Action("Register","User")" style="color:blueviolet;">Create</a></p></div>
                    </center>
                </form>
            </div>
        </div>
    } @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</section>