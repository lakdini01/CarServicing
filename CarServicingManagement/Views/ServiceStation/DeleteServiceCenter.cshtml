            <tr>

            </tr>
            <tr>

            </tr>
            <tr>

            </tr>
            <tr>

            </tr>

        </tbody>*@
</table>
<br />
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <center>
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary" />

            <a href="@Url.Action("Index","ServiceStation")" class="btn btn-warning">Back To List</a>
        </div>
    </center>
}